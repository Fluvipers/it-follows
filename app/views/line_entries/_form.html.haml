= simple_form_for(@line_entry, url: @url, method: @method, html: { multipart: true, id: 'line-entry-form', class: 'form-horizontal' }) do |f|
  - if @line_entry.new_record?
    = f.input_field :id
  - else
    = @line_entry.title

  - if not @line_entry.new_record?
    #mentions
      - @mentions.each do |mention| 
        = link_to "@#{mention}", "#"
      
    #tags
      - @hashtags.each do |hashtag|
        = link_to "##{hashtag}", "#"

    #followups
      - @line_entry.followups.each do |followup|
        = followup.description
        = "#{followup.percentage}%"

      = f.simple_fields_for :followups, @line_entry.followups.build do |ff|
        = ff.label :description, "Activity details"
        = ff.input_field :description

        = ff.label :percentage, "Completion percentage"
        = ff.input_field :percentage

        %label{ for: "line_entry_followups_attributes_0_tasks" } Tasks
        %textarea{ id: "line_entry_followups_attributes_0_tasks", name: "line_entry[followups_attributes][0][tasks]" }

        = ff.label :attachments, "Attachments"
        = ff.file_field :attachments, multiple: true, name: "line_entry[followups_attributes][0][attachments][]"
  = f.submit "Submit"
