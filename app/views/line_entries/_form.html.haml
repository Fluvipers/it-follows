= simple_form_for(@line_entry, html: { id: 'line-entry-form', class: 'form-horizontal' }) do |f|
  - if @line_entry.new_record?
    = f.label :title, 'Title'
    = f.input_field :title
  - else
    = @line_entry.title

  = f.label :advertiser, 'Advertiser'
  = f.input_field :advertiser

  = f.label :client, 'Client'
  = f.input_field :client

  - if not @line_entry.new_record?
    #followups
      = f.fields_for @line_entry.followups.build do |ff|
        = ff.label :description, "Activity details"
        = ff.input_field :description

        = ff.label :percentage, "Completion percentage"
        = ff.input_field :percentage

        %label{ for: "line_entry_followup_tasks" } Tasks
        %textarea{ id: "line_entry_followup_tasks", name: "line_entry[followup][tasks]" }

        = ff.label :attachments, "Attachments"
        = ff.file_field :attachments, multiple: true, name: "line_entry[followup][attachments][]"
  = f.submit "Submit"
